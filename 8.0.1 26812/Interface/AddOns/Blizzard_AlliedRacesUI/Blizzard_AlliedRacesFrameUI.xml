				<Texture atlas="AlliedRace-TraitsBorder" useAtlasSize="true">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
